<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#312C51"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F1AA98"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#F0C38E"
        android:textColorHint="#F0C38E"
        app:layout_constraintEnd_toEndOf="@+id/passwordtxt"
        app:layout_constraintStart_toStartOf="@+id/passwordtxt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:backgroundTint="#F1AA98"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#F0C38E"
        android:textColorHint="#F0C38E"
        app:layout_constraintStart_toStartOf="@+id/nametxt"
        app:layout_constraintTop_toBottomOf="@+id/nametxt" />

    <EditText
        android:id="@+id/passwordtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F1AA98"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="#F0C38E"
        android:textColorHint="#F0C38E"
        app:layout_constraintEnd_toEndOf="@+id/birthtxt"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/usernametxt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:backgroundTint="#F1AA98"
        android:text="Gender"
        android:textColor="#F0C38E"
        android:textColorHint="#f0c38e"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordtxt" />

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="178dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="@+id/birthtxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/passwordtxt">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F1AA98"
            android:checked="true"
            android:text="Male"
            android:textColor="#F0C38E"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="63dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="271dp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F1AA98"
            android:text="Female"
            android:textColor="#F0C38E"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="79dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="303dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/birthtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:backgroundTint="#F1AA98"
        android:ems="10"
        android:hint="Date of birth"
        android:inputType="textPersonName"
        android:textColor="#F0C38E"
        android:textColorHint="#F0C38E"
        app:layout_constraintEnd_toEndOf="@+id/jobtxt"
        app:layout_constraintStart_toStartOf="@+id/jobtxt"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/jobtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:backgroundTint="#F1AA98"
        android:ems="10"
        android:hint="Job"
        android:inputType="textPersonName"
        android:textColor="#F0C38E"
        android:textColorHint="#F0C38E"
        app:layout_constraintEnd_toEndOf="@+id/signUpBtn"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/birthtxt" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:background="#48426D"
        android:text="Sign Up"
        android:textColor="#F1AA98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>